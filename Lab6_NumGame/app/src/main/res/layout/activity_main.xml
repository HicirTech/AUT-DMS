<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25dp"
    android:minHeight="25dp">
    <TextView
        android:text="@string/title"
        android:textAppearance="@android:style/TextAppearance.Material.Display1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textTitle"
        android:textColor="#ffe64a19"
        android:paddingLeft="5dp" />
    <TextView
        android:text="@string/rule_title"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textRuleTitle"
        android:gravity="top"
        android:layout_below="@id/textTitle"
        android:textColor="#ffffeb3b"
        android:paddingLeft="10dp" />
    <TextView
        android:text="@string/game_rules"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textRule"
        android:gravity="top"
        android:layout_below="@id/textRuleTitle"
        android:paddingTop="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="25dp"
        android:paddingLeft="25dp" />
    <Button
        android:id="@+id/buttonPlay"
        android:text="Play Game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textRule"
        android:onClick="btnPlayOnClick" />
</RelativeLayout>